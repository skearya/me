					repeatCount="indefinite"></animate>
			</stop>
			<stop offset="100%" stop-color="#ffcf5f">
				<animate
					attributeName="stop-color"
					values="#ffcf5f; #acff5f; #5fff9c; #5fcfff; #5f6aff; #d45fff; #ff5fcc; #ff5f5f; #ffcf5f;"
